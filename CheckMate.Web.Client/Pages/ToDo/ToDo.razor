<MudGrid Spacing="2">
    <MudItem xs="12">
        <MudPaper Elevation="0" Height="90vh" style="overflow-y: auto;">
            <TodoList Items="_items" />
        </MudPaper>
    </MudItem>
    <MudItem xs="12">
        <MudPaper Elevation="12">
            <TodoInput OnTodoAdded="AddNewTodo" />
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    
    private string? _textValue;
    
    private readonly List<string> _items =
    [
        "Item 1",
        "Item 2",
        "Item 3"
    ];

    private void AddNewTodo(string todo)
    {
        _items.Add(todo);
    }
}